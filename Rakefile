require 'echoe'
Echoe.new('shopify') do |p|
  p.author = "Daniel Parker"
  p.email = 'gems@behindlogic.com'
  p.summary = "Easily communicate with Shopify.com's restful API."
  p.url = "http://github.com/dcparker/shopify/tree"
  p.docs_host = "http://github.com/dcparker/shopify/tree/master/doc/"
  p.runtime_dependencies = ["jnunemaker-httparty = 0.3.1"]
  p.need_gem = true
  p.need_zip = true
  p.require_signed = false
    p.certificate_chain = nil
    p.private_key = nil
  p.include_rakefile = false
end
